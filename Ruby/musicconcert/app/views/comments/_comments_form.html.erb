<div class="comments-form">
	<%= form_for [@concert, @comment] do |f| %>
		<% if current_user %>
			 <div>
				<%= f.label :comment %>
				<br />
				<%= f.text_area :comment %>
			</div>

			<div>
				<%= f.label "Posted by" %>
				<br />
				<%= f.text_field :name %>
			</div>

			<br>
			<div>
				<%= f.submit %>
			</div>

		<% else %><a href=""></a>
			<%= link_to "Sign up", new_user_path %>
				|
				<%= link_to 'Log in', login_path %>
		<% end %>
	<% end %>
</div>


